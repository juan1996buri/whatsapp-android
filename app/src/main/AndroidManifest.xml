<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proyectofinalciclo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_aplication"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar.">
        <activity android:name=".Activities.EliminarMiembroGrupoPrivadoActivity" />
        <activity
            android:name=".Activities.VistaImagenGrupoMundialActivity"/>
        <activity android:name=".Activities.ConfiguracionDelGrupoMundialActivity" />
        <activity
            android:name=".Activities.InformacionGrupoMundialActivity" />
        <activity
            android:name=".Activities.VistaImagenGrupoPrivadoActivity"/>
        <activity
            android:name=".Activities.InformacionGrupoPrivadoActivity" />
        <activity
            android:name=".Activities.ConfiguracionDelGrupoPrivadoActivity"/>
        <activity android:name=".Activities.MiembrosGrupoPrivadoActivity" />
        <activity
            android:name=".Activities.AgregarNuevoMiembroGrupoPrivadoActivity"/>
        <activity
            android:name=".Activities.MensajeGrupoPrivadoActivity"/>
        <activity
            android:name=".Activities.MensajeGrupoMundialActivity" />
        <activity
            android:name=".Activities.CrearGrupoActivity" />
        <activity
            android:name=".Activities.VistaImagenActivity"/>
        <activity
            android:name=".Activities.MensajeUsuarioActivity"/>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/file_path" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.proyectofinalciclo.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path" />
        </provider>

        <activity
            android:name=".Activities.SolicitudAmistadActivity"/>
        <activity
            android:name=".Activities.InformacionUsuarioActivity"/>
        <activity
            android:name=".Activities.AgregarAmigosActivity"/>
        <activity
            android:name=".Activities.ConfiguracionPerfilPersonalActivity"/>
        <activity
            android:name=".Activities.InicioActivity"/>
        <activity
            android:name=".Activities.ConfiguracionPerfilActivity"/>
        <activity
            android:name=".Activities.CodigoTelefonoActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".Activities.NumeroTelefonicoActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>